<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td colspan="1"> </td>
            <td>Nome</td>
            <td>Descrição</td>
            <td>Departamento</td>
            <td>Preço</td>
        </tr>
    </thead>
    <tbody>
        <% @produtos.each do |produto|%>
            <tr>
                <td><%= image_tag(produto.image, class:"imagens") if produto.image.attached? %></td>
                <td><%= produto.nome %></td>
                <td><%= produto.descricao %></td>
                <td><%= produto.departamento.nome %></td>
                <td><%= produto.preco %></td>
            </tr>
        <% end %>
    </tbody>
</table>